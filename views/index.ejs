<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head') %> <!-- Incluimos el contenido del head -->

  <body>
    <!-- Header -->
    <% if (locals.user != undefined) { %>
      <%- include('./partials/headerLogueado') %>
    <% } else { %>
      <%- include('./partials/header') %>
    <% } %>
    <!-- /Header -->

    <!-- Banner -->
    <div class="banner">
      <img src="/images/apple.65d0db786b372da606b0 (1) 2.jpg" alt="Banner de ofertas">
    </div>
    <!-- /Banner -->

    <!-- Novedades -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Productos</h2>

		  <% for (let i = 0; i < lista.length; i++) { %>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    
                    <a href="/product/<%=lista[i].id%>">
                        <figure class="product-box_image">
                          <img src="/images/products/<%= lista[i].foto %>" alt="<%= lista[i].foto %>">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= lista[i].nombre%></h2>
                            <p><%= lista[i].descripcion %></p>
                            <p>Creado por: <%= lista[i].usuarios.nombre%></p>

                        </article>
                    </a>
                </section>
            </div>
            <%} %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>
    <!-- /Footer -->
  </body>
</html>
